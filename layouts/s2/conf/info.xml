<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1">
    <title xml:lang="ko">어헝헝</title>
    <description xml:lang="ko">
        어헝헝
    </description>
    <version>0.1</version>
    <date>2014-02-17</date>
    <link>http://sxe.raonnet.com/</link>

    <author email_address="simplexe@live.co.kr" link="http://sxe.raonnet.com/">
        <name xml:lang="ko">SXE</name>
    </author>

    <extra_vars>
        <var name="headerlink" type="text">
            <title xml:lang="ko">헤더 링크</title>
            <description xml:lang="ko">헤더를 클릭하면 이동할 URL을 입력하세요.</description>
        </var>
	        <var name="background" type="text">
            <title xml:lang="ko">헤더 이미지</title>
            <description xml:lang="ko">헤더의 배경 이미지 경로를 입력하세요.</description>
        </var>
	        <var name="spancolor" type="text">
            <title xml:lang="ko">헤더 문자색</title>
            <description xml:lang="ko">샵(#)을 포함한 헤더문자색을 입력하세요.</description>
        </var>
		        <var name="vheadersay" type="text">
            <title xml:lang="ko">헤더 문자</title>
            <description xml:lang="ko">헤더문자를 입력하세요.</description>
        </var>
		        <var name="vwidget" type="textarea">
            <title xml:lang="ko">위젯영역 내용</title>
            <description xml:lang="ko">위젯영역 내용 입력을 하세요.</description>
        </var>
		        <var name="vfooter" type="textarea">
            <title xml:lang="ko">푸터 영역 내용</title>
            <description xml:lang="ko">푸터 영역 내용 입력을 하세요.</description>
        </var>
    </extra_vars>

    <menus>
        <menu name="main_menu" maxdepth="2" default="true">
            <title xml:lang="ko">상단 메뉴</title>
        </menu>
    </menus>
</layout>
